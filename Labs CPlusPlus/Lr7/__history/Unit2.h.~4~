//---------------------------------------------------------------------------

#ifndef Unit2H
#define Unit2H
#include <vcl.h>
#include <string>
#include "Unit1.h"

class Stack
{
public:
	Stack* next;
	int key;
	int number;

	Stack(int k,int n)
	{
		next = NULL;
		key = k;
		number = n;
	}
};

class HashTable
{
	static const int size = 5;

public:
	Stack **elements;
	int Hash(int);
	void Create();
	void Add(int,int);
	void Delete(TMemo*,int);
	void Show(TMemo*);
	Stack* Search(int);
	int FindStackNumber();
};

//---------------------------------------------------------------------------
#endif
