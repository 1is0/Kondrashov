//---------------------------------------------------------------------------


#pragma hdrstop

#include "Unit2.h"

int HashTable :: Hash(int num)
{
	if(!num)
	{
		 return num % size + 10;
	}
	else
	{
		 return num % size;
	}
}

void HashTable :: Create()
{
	elements = (Stack**)calloc(size, sizeof(Stack));
	for(int i = 0; i < size; i++)
	{
		elements[i] = (Stack*)calloc(1, sizeof(Stack));
		elements[i] = NULL;
	}
}

void HashTable :: Add(int n, int m)
{
	int i = Hash(n);
	if(!elements[i])
	{
		elements[i] = new Stack(n, m);
	}
	else
	{
		Stack *temp = elements[i];
		while(temp->next)
		{
			 temp = temp->next;
		}
		temp->next = new Stack(n, m);
		//elements[i]->nodes++;
	}
}

void HashTable :: Delete(TMemo *Memo, int numer)
{
	int i = Hash(numer);
	int marker = 0;
	Stack *del, *temp = NULL;
	for(del = elements[i]; del; del = del->next)
	{
		if(del->key == numer)
		{
			if(!temp)
			{
				elements[i] = del->next;
			}
			else
			{
				temp->next = del->next;
				//elements[i]->nodes--;
			}
			del = NULL;
			marker++;
			break;
		}
		temp = del;
	}
	if(!marker)
	{
		ShowMessage("Нет элемента с таким ключом");
	}
}

void HashTable :: Show(TMemo *Memo)
{
	Memo->Lines->Clear();
	for(int  i = 0; i < size; i++)
	{
		if(elements[i])
		{
			AnsiString str = "(" + IntToStr(elements[i]->key) + ", " + IntToStr(elements[i]->number) + ")";
			if(!elements[i]->next)
			{
				Memo->Lines->Add(str);
			}
			else
			{
				AnsiString s = "";
				Stack *temp = elements[i]->next;
				while(temp)
				{
					s += "   (" + IntToStr(temp->key) +", " + IntToStr(temp->number) + ")";
					temp = temp->next;
				}
				str += s;
				Memo->Lines->Add(str);
			}
		}
	}
	Memo->Lines->Add("\n");
}

void HashTable :: Search(TMemo *Memo, int numer)
{
	int i = Hash(numer);
	if(!elements[i])
	{
		ShowMessage("Нет элемента с таким ключом");
		return;
	}
	if(elements[i]->key == numer)
	{
		Memo->Lines->Add("Элемент найден");
		Memo->Lines->Add("Ключ: " + IntToStr(elements[i]->key) + "   Значение: " +
		IntToStr(elements[i]->number));
	}
	else
	{
		int marker = 0;
		Stack *temp = NULL;
		for(temp = elements[i]->next; temp; temp = temp->next)
		{
			if(temp->key == numer)
			{
				marker++;
				Memo->Lines->Add("Элемент найден");
				Memo->Lines->Add("Ключ: " + IntToStr(temp->key) + "   Значение: " +
				IntToStr(temp->number));
				break;
			}
		}
		if(!marker)
		{
			ShowMessage("Нет элемента с таким ключом");
		}
	}
	Memo->Lines->Add("\n");
}
//---------------------------------------------------------------------------

#pragma package(smart_init)
