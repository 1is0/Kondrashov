//---------------------------------------------------------------------------

#include <vcl.h>
#pragma hdrstop

#include "Unit1.h"
#include "Unit2.h"
//---------------------------------------------------------------------------
#pragma package(smart_init)
#pragma resource "*.dfm"
TForm1 *Form1;
HashTable hash;
//---------------------------------------------------------------------------
__fastcall TForm1::TForm1(TComponent* Owner)
	: TForm(Owner)
{
	hash.Create();
	srand(time(0));
	Memo1->Lines->Clear();
}
//---------------------------------------------------------------------------
void __fastcall TForm1::Button3Click(TObject *Sender)
{
	if(Edit1->Text != "")
	{
		int key = rand() % 100;
		int number = rand() % 100;
		hash.Add(key, number);
		hash.Show(Memo1);
	}
}


//---------------------------------------------------------------------------

void __fastcall TForm1::Button2Click(TObject *Sender)
{
	try
	{
		int key = StrToInt(Edit1->Text);
		if(key < 0)
		{
			ShowMessage("¬ведите корректный ключ");
		}
		else
		{
			hash.Delete(Memo1,key);
			hash.Show(Memo1);
		}
	}
	catch(...)
	{
		ShowMessage("¬ведите корректный ключ");
	}
}


//---------------------------------------------------------------------------

void __fastcall TForm1::Button1Click(TObject *Sender)
{
	try
	{
		int key = StrToInt(Edit1->Text);
		if(key < 0)
		{
			ShowMessage("¬ведите корректный ключ");
		}
		else
		{
			hash.Search(Memo1, key);
		}
	}
	catch(...)
	{
		ShowMessage("¬ведите корректный ключ");
	}
}
//---------------------------------------------------------------------------


